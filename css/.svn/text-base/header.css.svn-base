@charset "utf-8";
*{
	margin: 0;
	padding: 0;
}
#header_wrap{
	width: 1366px;
	margin: 0 auto;
	
	/*----------------------------------------背景图上半部白色下半部#666;*/
}

#header_wrap .header{
	width: 1200px;
	height: 124px;
	
	
	
}
#header_wrap .header .header_top_wrap{
	width: 1366px;
	border-bottom: 1px solid #666666;
	background: #f7f7f7;
}
#header_wrap .header .header_top{
	width: 1200px;
	height: 33px;
	margin: 0 auto;
	
}
#header_wrap .header .header_top .leul{
	width: 300px;
	height:33px ;
	
	float: left;
}
#header_wrap .header .header_top .leul ul{
	margin-left: 10px;
}
#header_wrap .header .header_top .leul ul li{
	float: left;
	color: #666;
	text-align: center;
	line-height: 33px;
	font-size: 13px;
}
#header_wrap .header .header_top .leul ul li a{
	color: #666;
}
#header_wrap .header .header_top .riul ul li a{
	color: #666;
}
#header_wrap .header .header_top .riul{
	float: right;
	width:227px;
	height: 16px;
	background: #f7f7f7;
	font-size: 13px;
	margin-top: 8px;
	color: #666666;
}
#header_wrap .header .header_top .riul>ul>li{
	float: left;
	width: 75px;
	height: 16px;
	
	
}

#header_wrap .header .header_top .riul_tele{
	float:right;
	width: 170px;
	height: 33px;
	
}

#header_wrap .header .header_top .riul_tele div{
	display: block;
	width: 20px;
	margin-top: 5px;
	float: left;
	height: 18px;
	background: url(../image/detail.gif) no-repeat -266px -26px;
	
}
#header_wrap .header .header_top .riul label{
	display: block;
	float: right;
	width: 18px;
	height: 18px;
	background: url(../image/detail.gif) no-repeat -251px -25px;
}
#header_wrap .header .header_top .riul .header_tab{
	
	line-height: 18px;
	margin-top: 10px;
	display: none;
}

#header_wrap .header .header_top .riul_tele p{
	color:red;
	font-size:20px;
	text-align: center;
	float: left;
	line-height: 33px;
	font-weight:bold;
	
}
#header_wrap .header .header_top .riul .hover_tab{
	height: auto;
	background: #f7f7f7;
}
#header_wrap .header .header_top .riul .hover_tab:hover{
	background: #fff;
}
#header_wrap .header .header_top .riul .hover_tab:hover .header_tab{
	display: block;
	background: #fff;
}
#header_wrap .header .header_top .riul .hover_tab .header_tab a:hover{
	color: red;
	text-decoration: underline;
	
}
/*header上半不部分结束*/
#header_wrap .header .header_bot{
	width: 1200px;
	height: 90px;
	background: #fff;
	margin-left: 83px;
	

}
#header_wrap .header .header_bot .logo{
	margin-left: 32px;
	margin-top: 15px;
	float: left;
}
#header_wrap .header .search_room{
	float: left;
	margin-top:17px;
	margin-left: 15px;
	position: relative;
	
}
#header_wrap .header .search_room:hover input{
	background: #f9f9f9;
	outline: none;
}
#header_wrap .header .search_room:hover .clear_value{
	display: block;
}
#header_wrap .header .clear_value{
	position: absolute;
	top: 11px;
	right: 75px;
	display: none;
	cursor: pointer;
}
#header_wrap .header .search_room p{
	float:right;
	height: 38px;
	width: 68px;
	text-align: center;
	line-height: 38px;
	color: #FFFFFF;
	font-size: 20px;
	background: #3498db;
}
#header_wrap .header .search_room input{
	width: 364px;
	height: 32px;
	margin-left: 150px;
	border: none 0;
	border: 3px solid #3498db;
	
	
}
#header_wrap .header  .search_nav{
	float: left;
	margin-left: 164px;
	margin-top: 10px;
	height: 13px;
}
#header_wrap .header  .search_nav ul *{
	float: left;
	font-size: 13px;
	color: #666666;
}
#header_wrap .header  .search_nav ul li{
	margin-left: 5px;
}
#header_wrap .header .shopping_car_wrap {
	position: relative;
	z-index: 3;
	
}
#header_wrap .header .shopping_car_wrap .shopping_car{
	float: right;
	
	width: 195px;
	height: 43px;
	font-size: 13px;
	line-height: 43px;
	text-align: center;
	margin-right: 20px;
	margin-top: -38px;
	background: url(../image/detail.gif) no-repeat 0px -30px;
	
}
#header_wrap .header .shopping_car_wrap .shopping_car:hover{
	background: url(../image/detail.gif) no-repeat 0px -74px;
}
#header_wrap .header .shopping_car_wrap:hover ul{
	display: block;
}

#header_wrap .header .shopping_car_wrap ul{
	width: 292px;
	height: 56px;
	background:#FFFFFF;
	top: 61px;
	right: 22px;
	position: absolute;
	border: 1px solid #ccc;
	font-size: 13px;
	color: #666;
	line-height:56px ;
	display: none;
	z-index: 2;
	
}
#header_wrap .header .shopping_car_wrap div{
	background-color: yellow;
	height: 5px;
	width: 10px;
	position: absolute;
	right: 1px;
	display: none;
	top: 57px;
	z-index: 99;
}

